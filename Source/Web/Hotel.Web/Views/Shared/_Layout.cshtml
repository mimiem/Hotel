<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blue River Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body style="background-color:deepskyblue;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="navbar navbar-inverse">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Blue River Hotel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Галерия", "CategoriesImages", "Images")</li>
                            <li>@Html.ActionLink("Адрес", "Index", "Address")</li>
                            <li>@Html.ActionLink("Резервация", "Add", "Reservation")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr style="border: 2px solid #073b8e" />
        <footer>
            <p>&copy; @DateTime.Now.Year - Blue River Hotel</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
      function myMap() {
        var uluru = {lat: 42.099904, lng: 25.221451};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: uluru,
		  mapTypeId: google.maps.MapTypeId.ROADMAP
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDy13NX3EGZ_VUNr9AdMqQSplpPESoAkNY&callback=myMap"></script>

    <script>
      $('#sandbox-container .input-daterange').datepicker({
         startDate: "-12/30/2014",
         endDate: "+01/15/2015",
         startView: 1,
         clearBtn: true,
         calendarWeeks: true,
         autoclose: true,
         todayHighlight: true
       });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
