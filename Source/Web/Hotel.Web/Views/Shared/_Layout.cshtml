<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Blue River Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>
<body style="background-color:deepskyblue;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="navbar navbar-inverse">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Blue River Hotel", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Галерия", "GalleryImages", "Images", new { category = "Room"},null)</li>
                            <li>@Html.ActionLink("Адрес", "Index", "Address")</li>
                            <li>@Html.ActionLink("Резервация", "Check", "Reservation")</li>
                            
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Развлечения<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink(
                                        linkText: "Ресторанти",
                                        actionName: "Details",
                                        controllerName: "Entertainment",
                                        routeValues: new
                                        {
                                            entertainmentId = "1"
                                        },
                                        htmlAttributes: null
                                    )</li>
                                    <li>
                                        @Html.ActionLink(
                                        linkText: "СПА център",
                                        actionName: "Details",
                                        controllerName: "Entertainment",
                                        routeValues: new
                                        {
                                            entertainmentId = "2"
                                        },
                                        htmlAttributes: null
                                    )
                                </li>
                                    <li>
                                        @Html.ActionLink(
                                        linkText: "Барове",
                                        actionName: "Details",
                                        controllerName: "Entertainment",
                                        routeValues: new
                                        {
                                            entertainmentId = "3"
                                        },
                                        htmlAttributes: null
                                    )
                                </li>
                                    <li>
                                        @Html.ActionLink(
                                        linkText: "Конферентни зали",
                                        actionName: "Details",
                                        controllerName: "Entertainment",
                                        routeValues: new
                                        {
                                            entertainmentId = "4"
                                        },
                                        htmlAttributes: null
                                    )
                                    </li>
                                </ul>
                            </li>
                            <li>

                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr style="border: 2px solid #073b8e" />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://github.com/mimiem/Hotel">Blue River Hotel</a></p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @*google.maps*@
    <script>
      function myMap() {
        var uluru = {lat: 42.099904, lng: 25.221451};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: uluru,
		  mapTypeId: google.maps.MapTypeId.ROADMAP
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDy13NX3EGZ_VUNr9AdMqQSplpPESoAkNY&callback=myMap"></script>

    @*cofirm reservation*@
    <script>
        function clicked(e)
        {
            if(!confirm('Сигурни ли сте?'))e.preventDefault();
        }
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>
