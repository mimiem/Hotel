@using Hotel.Web.ViewModels.Images
@model IEnumerable<CategoryPictureViewModel>
<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1" class=""></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img class="first-slide" src="~/Content/Images/hotel1.jpg" alt="First slide">
                </div>
                <div class="item">
                    <img class="second-slide" src="~/Content/Images/hotel2.jpg" alt="Second slide">
                </div>
            </div>
        </div>
    </div>
</div>

<hr style="border: 2px solid #073b8e" />

<div class="row">
    <div class="col-md-12">
        <div class="thumbnail">
            <div style="margin-top: 20px; margin-left: 50px">
                <h2>Добре дошли в Blue River Hotel &#9733 &#9733 &#9733 &#9733 &#9733</h2>
                <p>
                    Открийте очарованието на ...

                    С удивителна инфраструктура, разположен сред природата, Blue River Hotel Ви предлага всичко, от което се нуждаете, за едно приятно прекарване или перфектно организирано мероприятие.

                    Зашеметяващи панорамни гледки, невероятни възможности за срещи и свободно време!
                </p>
            </div>
        </div>
    </div>
</div>

<hr style="border: 2px solid #073b8e" />

<div class="row">
    @foreach (var category in Model)
    {
        
        <div class="col-md-4">
            <div class="thumbnail">
                <a href="/images/@Html.DisplayFor(modelItem => category.Category)">
                    <img class="img-rounded" border="0" alt="@Html.DisplayFor(modelItem => category.Category)+s" src='@Url.Action("GetImage", "Images", new { id= category.PictureId })' width="350" height="350">
                </a>
                <div class="caption">
                    <a href="/images/@Html.DisplayFor(modelItem => category.Category)">
                        <h2>@Html.DisplayFor(modelItem => category.Name)</h2>
                    </a>
                    <p>
                        @Html.DisplayFor(modelItem => category.ShortDescription)
                    </p>
                </div>
            </div>
        </div>
    }
</div>
