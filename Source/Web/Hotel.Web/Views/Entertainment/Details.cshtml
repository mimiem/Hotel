@using Hotel.Web.ViewModels.Entertainment
@model EntertainmentViewModel

<div class="row">
    <div class="col-md-12">
        <div class="thumbnail">
            <h3>@Html.DisplayFor(model => model.Name)</h3>
            <p>
                @Html.DisplayFor(model => model.Description)
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-5">
        <div class="carousel slide" id="carousel2">
            <ol class="carousel-indicators">
                @{var i = -1;
                    foreach (var imageId in Model.PictureIds)
                    {

                        <li data-slide-to="@(++i)" data-target="#carousel2" class="@(i==0? "active":"")"></li>

                    }
                }
            </ol>
            <div class="carousel-inner">
                @{var isFirst = true;
                    foreach (var imageId in Model.PictureIds)
                    {
                        <div class="item @(isFirst ? "active": "")">
                            @(isFirst = false)
                            <img alt="image" class="img-responsive" src="@Url.Action("GetImage", "Images", new { id= imageId })" style="height:400px;width:500px">

                            <div class="carousel-caption">
                                <p>@Model.Name</p>
                            </div>
                        </div>
                    }
                }



            </div>
            <a data-slide="prev" href="#carousel2" class="left carousel-control">
                <span class="icon-prev"></span>
            </a>
            <a data-slide="next" href="#carousel2" class="right carousel-control">
                <span class="icon-next"></span>
            </a>
        </div>

    </div>
    <div class="col-xs-7">
        <div class="thumbnail">
            <h4>Предлагаме ви:</h4>
            @foreach (var item in Model.Facilities)
            {
                <p style="color:#6999e5"> > @item</p>
            }
        </div>
    </div>
</div>





